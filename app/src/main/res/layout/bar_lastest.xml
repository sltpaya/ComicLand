<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CollapsingToolbarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/action_bar_min_height"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <TextView
                android:id="@+id/title_lastest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/lastest_title"
                android:textColor="#000000"
                android:textSize="@dimen/title_size" />

            <FrameLayout
                android:id="@+id/search_lastest"
                android:layout_width="@dimen/bar_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true">

                <ImageView
                    android:contentDescription="@string/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/search_shelf" />
            </FrameLayout>

        </RelativeLayout>
        <View
            android:background="#55444444"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_min_height"
            android:background="@color/white"
            app:tabBackground="@null"
            app:tabIndicatorColor="@android:color/holo_red_light"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@android:color/holo_red_light"
            app:tabTextColor="#000000">

        </android.support.design.widget.TabLayout>

    </LinearLayout>

</android.support.design.widget.CollapsingToolbarLayout>
